<?xml version="1.0" encoding="UTF-8"?>
<infinispan
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="urn:infinispan:config:8.1 http://www.infinispan.org/schemas/infinispan-config-8.1.xsd"
        xmlns="urn:infinispan:config:8.1">

    <!-- *************************** -->
    <!-- System-wide global settings -->
    <!-- *************************** -->
    <jgroups>
        <!-- Note that the JGroups transport uses sensible defaults if no configuration
            property is defined. See the JGroupsTransport javadocs for more flags.
            jgroups-udp.xml is the default stack bundled in the Infinispan core jar: integration
            and tuning are tested by Infinispan. -->
        <stack-file name="default-jgroups-udp" path="default-configs/default-jgroups-udp.xml"/>
    </jgroups>

    <cache-container name="HibernateSearch" default-cache="default" statistics="false" shutdown-hook="DONT_REGISTER">

        <transport stack="default-jgroups-udp"/>

        <!-- Duplicate domains are allowed so that multiple deployments with default configuration
            of Hibernate Search applications work - if possible it would be better to use JNDI to share
            the CacheManager across applications -->
        <jmx duplicate-domains="true"/>

        <!-- *************************************** -->
        <!--  Cache to store Lucene's file metadata  -->
        <!-- *************************************** -->
        <replicated-cache name="LuceneIndexesMetadata" mode="SYNC" remote-timeout="25000">
            <persistence>
                <file-store
                        shared="false"
                        preload="true"
                        fetch-state="true"
                        read-only="false"
                        purge="false"

                        path="./target/infinispan/lucene-metadata">
                    <write-behind thread-pool-size="5" />
                </file-store>
            </persistence>
            <indexing index="ALL"/>
        </replicated-cache>

        <!-- **************************** -->
        <!--  Cache to store Lucene data  -->
        <!-- **************************** -->
        <replicated-cache name="LuceneIndexesData" mode="SYNC" remote-timeout="25000">
            <persistence>
                <file-store
                        shared="false"
                        preload="true"
                        fetch-state="true"
                        read-only="false"
                        purge="false"

                        path="./target/infinispan/lucene-data">
                    <write-behind thread-pool-size="5" />
                </file-store>
            </persistence>
            <indexing index="ALL"/>

        </replicated-cache>

        <!-- ***************************** -->
        <!--  Cache to store Lucene locks  -->
        <!-- ***************************** -->
        <replicated-cache name="LuceneIndexesLocking" mode="SYNC" remote-timeout="25000">

            <indexing index="ALL"/>
        </replicated-cache>
    </cache-container>

</infinispan>
